{
  "root": true,
//  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": "standard",
  "plugins": ["html", "jest"],
  "rules": {
    "no-unused-vars": ["warn", {
      "vars": "local",
      "args": "none",
      "ignoreRestSiblings": false
    }],
    "arrow-parens": 0,
    "generator-star-spacing": 0,
    "no-debugger": 0,
    "no-new": 0,
    "space-before-function-paren": ["error", {
      "anonymous": "never",
      "named": "never",
      "asyncArrow": "never"
    }]
  },
  "env": {
    "jest/globals": true
  }
}
